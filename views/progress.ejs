<!DOCTYPE html>
<html>
<title>Scores</title>
<head>
    <meta charset="utf-8">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"> </script>
</head>
<body>
    <%- include("partials/nav-bar.ejs") %>
    <main class="p-5">
        <div class="col-md-6 offset-md-3">
            <div class="card-body">
                <h1>Progress for <%= course %> </h1>
            </div>
        </div>
        <div class="col-md-6 offset-md-3">
            <div class="card-body">
                <canvas id="chart" width="800" height="400"></canvas>
            </div>
        </div>
        <div class="col-md-6 offset-md-3">
            <div class="card-body">
                <a type="button" class="btn btn-primary" href="/scores">Input More Scores!</a>
            </div>
        </div>        
        <script type="text/javascript">
            console.log("in script");
            var scoresJSON = <%- JSON.stringify(data) %>;
            console.log("score 1 " + scoresJSON[0]);
            console.log("here loser");
            var scores = [];
            var labels = [];

            for (var i = 0; i < scoresJSON.length; i++) {
                console.log(i);
                console.log(scoresJSON[i].x);
                scores.push(scoresJSON[i].x);
                var scoreNum = i + 1;
                labels.push("Score #" + scoreNum);
            }

            var ctx = chart;
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    datasets: [{
                        label: "Progress for <%- course %>",
                        data: scores,
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }],
                    labels: labels
                },
                options: {
                    title: {
                        display: false,
                        text: 'Progress for <%- course %>'
                    },
                    scales: {
                        yAxes: [{
                            ticks: {
                                max: 100,
                                min: 0,
                                stepSize: 10
                            }
                        }]
                    }, 
                    legend: {
                        display: false
                    }
                }
            });
        </script>
    </main>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>