<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- dark mode style -->

    <style name="DarkMode" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/topbar</item>
        <item name="colorAccent">@color/darkColorAccent</item>
<!--        <item name="android:background">@color/darkBackground</item>-->
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:textColorSecondaryInverse">@color/darkColorPrimaryDark</item>
<!--        <item name="android:colorBackground">@color/darkBackground</item>-->
        <item name="android:textColorSecondary">@color/darkColorAccent</item>
        <item name="colorButtonNormal">@color/darkColorPrimaryDark</item>
        <item name="android:headerBackground">@color/darkColorPrimaryDark</item>
    </style>

    <style name="DarkMode.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkMode.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="DarkMode.PopupOverlay" parent="ThemeOverlay.AppCompat" />

</resources>
